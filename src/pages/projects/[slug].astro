---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((p) => ({
    params: { slug: p.slug },
    props: { project: p },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---
<BaseLayout title={`${project.data.title} â€” Projects`} description={project.data.summary}>
  <section class="py-12">
    <h1 class="font-display text-2xl">{project.data.title}</h1>
    <p class="mt-2 text-support2">{project.data.summary}</p>

    <div class="mt-4 flex flex-wrap gap-2">
      {project.data.tags.map((t) => (
        <span class="px-2 py-1 text-xs bg-primary2 rounded-full">{t}</span>
      ))}
    </div>

    <div class="mt-8 bg-white p-6 rounded-md shadow-soft prose max-w-none">
      <Content />
    </div>

    {project.data.links?.demo && (
      <div class="mt-8 bg-white p-6 rounded-md shadow-soft">
        <h2 class="font-semibold">Demo</h2>
        <p class="mt-2 text-support2">
          <a class="text-ink hover:underline" href={project.data.links.demo} target="_blank" rel="noopener">
            View demo
          </a>
        </p>
      </div>
    )}
  </section>
</BaseLayout>

