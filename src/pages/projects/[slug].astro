---
// src/pages/projects/[slug].astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const { slug } = Astro.params;
const project = await getCollection("projects").then(c => c.find(x => x.slug === slug));
---
<BaseLayout title={`${project?.data.title || slug} â€” Projects`}>
  <section class="py-12">
    <h1 class="font-display text-2xl">{project?.data.title}</h1>
    <div class="mt-4 text-support2">{project?.data.summary}</div>

    <article class="mt-6 bg-white p-6 rounded-md shadow-soft">
      <h2 class="font-semibold">Approach</h2>
      <div class="mt-2">
        <slot name="content">
          <div innerHTML={project?.body} />
        </slot>
      </div>
      <h3 class="mt-4 font-semibold">Tech stack</h3>
      <div class="mt-2">{project?.data.stack?.join(", ")}</div>
    </article>
  </section>
</BaseLayout>
